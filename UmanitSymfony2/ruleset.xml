<?xml version="1.0"?>
<ruleset name="UmanIT Symfony2">
    <description>UmanIT coding standards for Symfony2</description>
    <rule ref="UmanitPhp" />
    <rule ref="Symfony2">
        <exclude name="Squiz.ControlStructures.ControlSignature.NewlineAfterOpenBrace" />
        <exclude name="Squiz.Strings.ConcatenationSpacing.PaddingFound" />
        <exclude name="PSR2.ControlStructures.SwitchDeclaration.SpaceBeforeColonCASE" />
        <exclude name="PSR2.ControlStructures.ElseIfDeclaration.NotAllowed" />
        <exclude name="Symfony2.Arrays.MultiLineArrayComma.Invalid" />
        <exclude name="Symfony2.Commenting.FunctionComment.Missing" />
        <exclude name="Symfony2.Commenting.FunctionComment.SpacingAfterParamType" />
    </rule>
</ruleset>
